<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="7dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Order Id: "
            android:textStyle="bold"
            android:id="@+id/order_item_id"/>

        <TextView
            android:layout_below="@id/order_item_id"
            android:textSize="15sp"
            android:text="Item Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/return_item_name"/>

        <TextView
            android:layout_alignParentEnd="true"
            android:text="Mobile: "
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mobile"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_below="@id/mobile"
            android:textSize="15sp"
            android:text="Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/return_item_quantity"
            android:layout_alignParentRight="true" />

        <TextView
            android:textSize="15sp"
            android:text="Location: "
            android:layout_toLeftOf="@id/return_item_quantity"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/return_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/return_item_delivery_location"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>